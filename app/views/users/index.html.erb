  <p id="notice"></p>
  <div class='container px-5 px-sm-0'>
  <div class='row'>


  <div class='col-md-3'>
  <h2>User info</h2>
  <table class='table'>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
 <tr>
	  <th>name</th>
	  <th class="profile-name"><%= @user.name %></th>
  </tr>
  <tr>
 	  <th>introduction</th>
	  <th class="profile-name"><%= @user.introduction %></th>
 </tr>
  </table>


  <% if @user.id == current_user.id %>
    <p><%= link_to "Edit", edit_user_path(@user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %></p>
  <% end %>


<h2 class="mt-3">New book</h2>
<%= form_with model: @book, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>


<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
    <table class="table table-hover table-inverse">

  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <tr>
 <% @users.each do |user| %>
  <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
  <td><%= user.name %></td>
  <td><%= link_to "Show", user_path(user) %></td>
  </tr>
  </tbody>
  
  <% end %>
  </table>
    </div>

